<!doctype html>
<html class="no-js" lang="en">

<head>
	<meta charset="utf-8">

	<!--====== Title ======-->
	<title>E - Commerce </title>

	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!--====== Favicon Icon ======-->
	<link rel="shortcut icon" href="/images/favicon.png" type="image/png">

	<!--====== Animate CSS ======-->
	<link rel="stylesheet" href="/css/animate.css">

	<!--====== Tiny slider CSS ======-->
	<link rel="stylesheet" href="/css/tiny-slider.css">

	<!--====== glightbox CSS ======-->
	<link rel="stylesheet" href="/css/glightbox.min.css">

	<!--====== Line Icons CSS ======-->
	<link rel="stylesheet" href="/css/LineIcons.2.0.css">

	<!--====== Selectr CSS ======-->
	<link rel="stylesheet" href="/css/selectr.css">

	<!--====== Nouislider CSS ======-->
	<link rel="stylesheet" href="/css/nouislider.css">

	<!--====== Bootstrap CSS ======-->
	<link rel="stylesheet" href="/css/bootstrap-5.0.5-alpha.min.css">

	<!--====== Style CSS ======-->
	<link rel="stylesheet" href="/css/style.css">

</head>

<body>
	<div class="preloader">
		<div class="loader">
			<div class="ytp-spinner">
				<div class="ytp-spinner-container">
					<div class="ytp-spinner-rotator">
						<div class="ytp-spinner-left">
							<div class="ytp-spinner-circle"></div>
						</div>
						<div class="ytp-spinner-right">
							<div class="ytp-spinner-circle"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--====== PRELOADER PART ENDS ======-->
	<!--====== HEADER PART START ======-->
	<header class="header_area fw-bold">
		<div id="header_navbar" class="header_navbar">
			<div class="container position-relative">
				<div class="row align-items-center">
					<div class="col-xl-12">
						<nav class="navbar navbar-expand-lg">
							<a asp-controller="Department" asp-action="Index">
								<img style="width:50px;height:50px;" src="/images/download.png" alt="Logo">
							</a>
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
									aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
								<span class="toggler-icon"></span>
								<span class="toggler-icon"></span>
								<span class="toggler-icon"></span>
							</button>
							<div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
								<ul id="nav" class="navbar-nav">
									@RenderSection("Nav",required:false)

									
									@if (User.IsInRole("Admin") || User.IsInRole("SV"))
									{
										<li class="nav-item">
											<a class="text-danger fw-bold m-2" data-toggle="collapse" data-target="#sub-nav" aria-controls="sub-nav"
											   aria-expanded="false" aria-label="Toggle navigation" href="javascript:void(0)">
												Dashboard
												<div class="sub-nav-toggler">
													<span></span>
												</div>
											</a>
											<ul class="sub-menu collapse" id="sub-nav">
												@if (User.IsInRole("Admin"))
												{
													<li class="nav-item">
														<a class="text-danger fw-bold m-2" asp-area="" asp-controller="Role" asp-action="Index">Management</a>
													</li>
												}
												<li><a class="text-danger fw-bold m-2" asp-controller="Dashboard" asp-action="MangingDepartment">Manging Categories</a></li>
												<li><a class="text-danger fw-bold m-2" asp-controller="Dashboard" asp-action="Index">Manging Products</a></li>
											</ul>
										</li>
									}

								</ul>

							</div>
							<ul class="header-btn d-md-flex">
								@if (!User.Identity.IsAuthenticated)
								{
									<li class="nav-item">
										<a class="btn btn-outline-danger m-2" asp-area="" asp-controller="Account" asp-action="Login">SignIn</a>
									</li>
									<li class="nav-item">
										<a class="btn btn-outline-danger m-2" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
									</li>
								}
								else
								{
									<li class="nav-item">
										<a class="text-danger fw-bold m-2" style="width: 100px;padding-top: 9px;">Hello @User.Identity.Name</a>
									</li>
									<li class="nav-item">
										<a class="btn btn-outline-danger m-2" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
									</li>
								}
							</ul>
						</nav> <!-- navbar -->
					</div>
				</div> <!-- row -->
			</div> <!-- container -->
		</div> <!-- header navbar -->
	</header>

	<!--====== HEADER PART ENDS ======-->
	@RenderSection("Hero",required: false)

	<!--====== CATEGORY LIST PART START ======-->
	<section class="category-list-area pt-130">
		<div class="container">
				@RenderBody()
		</div>
	</section>
	<!--====== CATEGORY LIST PART END ======-->
	<!--====== VIDEO PART START ======-->
	@RenderSection("OtherBody",required: false)
	<!--====== FOOTER PART START ======-->
		<footer class="footer-area">
	@RenderSection("Footer",required:false)
			<div class="copy-right">
				<div class="container">
					<div class="row">
						<div class="col-sm-12">
							<div class="text-center">
								<p>Designed & Developed By <a href="" rel="nofollow" target="_blank">ITI MVC ProjectTeam</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>
		<!--====== FOOTER PART ENDS ======-->
		<!--====== BACK TOP TOP PART START ======-->
		<a href="#" class="back-to-top btn-hover"><i class="lni lni-chevron-up"></i></a>
		<!--====== BACK TOP TOP PART ENDS ======-->
		<!--====== Bootstrap js ======-->
		<script src="/js/bootstrap.bundle-5.0.0.alpha-min.js"></script>

		<!--====== Tiny slider js ======-->
		<script src="/js/tiny-slider.js"></script>

		<!--====== wow js ======-->
		<script src="/js/wow.min.js"></script>

		<!--====== glightbox js ======-->
		<script src="/js/glightbox.min.js"></script>

		<!--====== Selectr js ======-->
		<script src="/js/selectr.min.js"></script>

		<!--====== Nouislider js ======-->
		<script src="/js/nouislider.js"></script>

		<!--====== Main js ======-->
		<script src="/js/main.js"></script>

		<script>

			//========= glightbox
			const myGallery = GLightbox({
				'href': '/video/Free App Landing Page Template - AppLand.mp4',
				'type': 'video',
				'source': 'youtube', //vimeo, youtube or local
				'width': 900,
				'autoplayVideos': true,
			});

			//======== tiny slider for feature-product-carousel
			tns({
				slideBy: 'page',
				autoplay: false,
				mouseDrag: true,
				gutter: 20,
				nav: false,
				controls: true,
				controlsPosition: 'bottom',
				controlsText: [
					'<span class="prev"><i class="lni lni-chevron-left"></i></span>',
					'<span class="next"><i class="lni lni-chevron-right"></i></span>'
				],
				container: ".feature-product-carousel",
				items: 1,
				center: false,
				autoplayTimeout: 5000,
				swipeAngle: false,
				speed: 400,
				responsive: {
					768: {
						items: 2,
					},

					992: {
						items: 2,
					},

					1200: {
						items: 3,
					}
				}
			});

			//======== tiny slider for testimonial
			tns({
				slideBy: 'page',
				autoplay: false,
				mouseDrag: true,
				gutter: 20,
				nav: true,
				controls: false,
				container: ".testimonial-carousel",
				items: 1,
				center: false,
				autoplayTimeout: 5000,
				swipeAngle: false,
				speed: 400,
				responsive: {
					768: {
						items: 2,
					},
					1200: {
						items: 3,
					}
				}
			});
		</script>
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		@await RenderSectionAsync("Scripts", required: false)
</body>

</html>