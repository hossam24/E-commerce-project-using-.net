@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h3 class="display-4">Edit Role</h3>
<form asp-controller="Role" asp-action="EditRole" method="post" style="height:60vh">

    <div class="form-group mb-2">
        <label asp-for="RoleId" class="form-label"></label>
        <input asp-for="RoleId" disabled class="form-control" />
        <input asp-for="RoleId" hidden class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="RoleName" class="form-label"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-outline-warning">Update</button>
    <a asp-controller="Role" asp-action="ListRoles" class="btn btn-outline-success">Cancel</a>

</form>
